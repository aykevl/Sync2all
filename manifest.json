{
	"name": "Sync2All",
	"version": "0.1",
	"description": "Synchronizes the browser bookmarks with bookmarks on the web: Google Bookmarks and Opera Link.",
	"browser_action": {
		"default_icon": "images/icon.png",
		"popup": "popup.html"
	},
	"background_page": "background.html",
	"options_page": "options.html",
	"permissions": [
		"bookmarks",
		"tabs",
		"extensions",
		"https://www.google.com/bookmarks/",
		"https://auth.opera.com/",
		"https://link.api.opera.com/"
	],
	"content_scripts": [
		{
			"matches": ["https://auth.opera.com/service/oauth/authorize"],
			"js":      ["remotes/opera-link_authorize.js"]
		}
	]
}
